# OSINT System Environment Variables Example
# Copy this file to .env and adjust values

# --- API Configuration ---
OSINT_API_HOST=0.0.0.0
OSINT_API_PORT=8000
OSINT_AUTH_ENABLED=true
OSINT_JWT_SECRET="changeme_in_production"  # Generate a strong secret!
OSINT_JWT_ALGORITHM=HS256
OSINT_JWT_EXPIRY_HOURS=24

# --- Database Configuration ---
# Format: postgresql+asyncpg://user:password@host:port/dbname
OSINT_DATABASE_URL=postgresql+asyncpg://osint_user:osint_password@localhost:5432/osint_db
OSINT_DATABASE_POOL_SIZE=5
OSINT_DATABASE_MAX_OVERFLOW=10

# --- Messaging (RabbitMQ) ---
# Supports 'rabbitmq', 'kafka', or 'memory' (for testing)
OSINT_MESSAGING_BROKER_TYPE=rabbitmq
OSINT_MESSAGING_HOST=localhost
OSINT_MESSAGING_PORT=5672
OSINT_MESSAGING_USERNAME=guest
OSINT_MESSAGING_PASSWORD=guest
OSINT_RABBITMQ_VHOST=/
OSINT_EXCHANGE_NAME=osint_exchange

# --- Agent Configuration ---
OSINT_AGENT_LOG_LEVEL=INFO
OSINT_MAX_CONCURRENT_TASKS=5

# --- Redis (Optional caching) ---
OSINT_REDIS_URL=redis://localhost:6379/0
